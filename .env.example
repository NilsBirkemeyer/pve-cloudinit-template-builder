# .env.example for pve-cloudinit-template-builder.sh

# Base paths & storage
DOWNLOAD_DIR="/tmp/templates"                          # e.g. "/root/templates" or "/local-zfs/templates"
STORAGE_POOL="local-lvm"                               # e.g. "local-lvm" or "local-zfs"

# VM resources
VM_RAM="4096"                                          # in MB, e.g. 2048, 4096, 8192
VM_CORES="2"                                           # vCPU count, e.g. 2, 4
DISK_SIZE="8G"                                         # e.g. "8G", "16G", "32G"

# Network / Cloud-Init
NET_BRIDGE="vmbr0"                                     # e.g. "vmbr0", "vmbr1"
IPCONFIG="dhcp"                                        # e.g. "dhcp" or "192.168.10.50/24,gw=192.168.10.1"
SEARCHDOMAIN="example.com"                             # or "" to skip setting it
NAMESERVER="10.60.0.1"                                 # or "" to skip setting it

# Authentication
AUTHORIZED_KEYS="/root/templates/authorized_keys"
ADMIN_PASSWORD_FILE="/root/templates/admin_password"
# ADMIN_PASSWORD="supersecret"                         # optional; overrides ADMIN_PASSWORD_FILE if set

# Timezone
TIMEZONE="Europe/Berlin"

# Sysprep operations (optional override)
SYSPREP_OPS="bash-history,logfiles,ssh-hostkeys,machine-id,package-manager-cache"

# Behaviour toggles
SKIP_IF_BASE_UNCHANGED="false"                         # "true" to skip rebuild when base image unchanged
RESIZE_WAIT_ENABLED="true"                             # "false" to skip sleep before/after qm resize
